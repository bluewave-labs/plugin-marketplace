{
  "id": "microsoft-teams",
  "name": "Microsoft Teams",
  "description": "Send notifications and updates to Microsoft Teams channels. Get alerts for risk changes, task assignments, compliance updates, and more.",
  "version": "1.0.0",
  "author": {
    "name": "VerifyWise",
    "url": "https://verifywise.ai"
  },
  "type": "integration",
  "tags": ["teams", "microsoft", "notifications", "alerts", "messaging"],
  "permissions": ["events:listen", "config:read", "http:outbound"],
  "config": {
    "webhookUrl": {
      "type": "string",
      "required": true,
      "secret": true,
      "label": "Webhook URL",
      "description": "Microsoft Teams incoming webhook URL"
    },
    "notifyOnRisks": {
      "type": "boolean",
      "default": true,
      "label": "Risk notifications",
      "description": "Send notifications for risk events"
    },
    "notifyOnCompliance": {
      "type": "boolean",
      "default": true,
      "label": "Compliance notifications",
      "description": "Send notifications for compliance updates"
    },
    "mentionOnCritical": {
      "type": "boolean",
      "default": false,
      "label": "Mention on critical",
      "description": "Mention channel when critical risks are detected"
    }
  },
  "compatibility": {
    "minVersion": "1.6.0"
  }
}
