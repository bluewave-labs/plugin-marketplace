{
  "id": "soc2-compliance",
  "name": "SOC 2 compliance",
  "description": "SOC 2 Type I and Type II compliance tracking. Map controls to Trust Service Criteria, monitor compliance status, and prepare for SOC 2 audits.",
  "version": "1.0.0",
  "author": {
    "name": "VerifyWise",
    "url": "https://verifywise.ai"
  },
  "type": "framework",
  "tags": ["soc2", "aicpa", "security", "compliance", "audit", "trust-services"],
  "permissions": ["database:read", "database:write", "config:read"],
  "config": {
    "reportType": {
      "type": "select",
      "options": ["Type I", "Type II"],
      "default": "Type II",
      "label": "Report type",
      "description": "SOC 2 report type to prepare for"
    },
    "trustCriteria": {
      "type": "select",
      "options": ["Security", "Security + Availability", "Security + Confidentiality", "All Five"],
      "default": "Security",
      "label": "Trust criteria",
      "description": "Trust Service Criteria to include"
    },
    "auditPeriodMonths": {
      "type": "number",
      "default": 12,
      "min": 3,
      "max": 12,
      "label": "Audit period (months)",
      "description": "Length of the audit observation period"
    },
    "auditorFirm": {
      "type": "string",
      "required": false,
      "label": "Auditor firm",
      "description": "Name of your SOC 2 auditor"
    }
  },
  "compatibility": {
    "minVersion": "1.6.0"
  }
}
